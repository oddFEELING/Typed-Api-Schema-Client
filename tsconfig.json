{
	"exclude": ["node_modules", "build", "tasc.config.ts", "tasc.config.js"],
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "nodenext",
		"target": "esnext",
		"moduleResolution": "nodenext",
		"moduleDetection": "force",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"outDir": "build",
		"declaration": true,
		"declarationMap": true
	}
}
